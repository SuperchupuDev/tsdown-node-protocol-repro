{
  "compilerOptions": {
    "lib": ["esnext"],

    "module": "esnext",
    "moduleResolution": "bundler",

    "outDir": "dist",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "isolatedDeclarations": true,

    "allowImportingTsExtensions": true,
    "noEmit": true,
    "skipLibCheck": true,

    "strict": true
  }
}
